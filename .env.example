###############
# Router Lambda
###############
# GitHub access token used by the MCP router-lambda to read config files from GitHub.
GITHUB_TOKEN=github_pat_xxx

# Repo identity (IMPORTANT: REPO_OWNER is your GitHub username/org)
REPO_OWNER=Puranjay-del-Mishra
REPO_NAME=promptline

# Canonical config branch to treat as "live"
CONFIG_BRANCH_LIVE=config/live

# S3 destination where router-lambda writes runtime config artifacts
S3_BUCKET=promptline
S3_RUNTIME_PREFIX=runtime/

# Internal auth for calling MCP endpoints (used by CI or backend if needed)
MCP_INTERNAL_API_KEY=change_me_to_random_hex

# Optional: if your lambda needs to call the backend notify hook (if you add this)
# BACKEND_NOTIFY_URL=https://your-ec2-domain/internal/config-updated
# BACKEND_NOTIFY_API_KEY=optional_if_you_add_auth


###################
# Backend (Spring)
###################
# The backend reads runtime config from S3 using its own naming scheme.
# These default in application.yml but you can override here.

# Bucket where backend reads config from
PROMPTLINE_CONFIG_BUCKET=promptline

# Keys (paths) for backend reads
# If you want to read from the same objects written by lambda:
PROMPTLINE_UI_KEY=runtime/ui.json
PROMPTLINE_POLICY_KEY=runtime/policy.json

# Environment name (if your yml uses ${promptline.env} anywhere)
# promptline.env=local   (usually a property, not env var; depends on your setup)

# AWS region for backend AWS SDK calls (helpful in local dev)
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# Spring DB (your local docker postgres)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/promptline
SPRING_DATASOURCE_USERNAME=promptline
SPRING_DATASOURCE_PASSWORD=promptline


#########################
# Local Dev Convenience
#########################
# If you use a base URL for curl / scripts
# BASE_URL=http://localhost:8080

